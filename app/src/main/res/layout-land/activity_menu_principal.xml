<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MenuPrincipalActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bordes_redondeados_verde"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/btn_text_1"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/bordes_redondeados_blanco"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/btn_text_2"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="#FF373737"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_1" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bordes_redondeados_verde"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/btn_text_3"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_2" />

            <Button
                android:id="@+id/btn_4"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                android:textSize="25sp"
                android:background="@drawable/bordes_redondeados_blanco"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/btn_text_4"
                android:textAlignment="center"
                android:textColor="#FF373737"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_3" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bordes_redondeados_verde"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/btn_text_5"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_4" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/bordes_redondeados_blanco"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/btn_text_6"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="#FF373737"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_5" />

            <Button
                android:id="@+id/btn_7"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bordes_redondeados_verde"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/btn_text_7"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_6" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/bordes_redondeados_title"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/btn_text_8"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_7" />

            <ImageButton
                android:id="@+id/caneca_verde"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:background="#2F6173"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_8"
                app:srcCompat="@drawable/canecaverde"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/caneca_blanca"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:background="#2F6173"
                app:layout_constraintEnd_toStartOf="@+id/caneca_negra"
                app:layout_constraintStart_toEndOf="@+id/caneca_verde"
                app:layout_constraintTop_toBottomOf="@+id/btn_8"
                app:srcCompat="@drawable/canecablanca"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/caneca_negra"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                android:background="#2F6173"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_8"
                app:srcCompat="@drawable/canecanegra"
                tools:ignore="ContentDescription" />

            <FrameLayout
                android:id="@+id/frame_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/caneca_blanca">
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>